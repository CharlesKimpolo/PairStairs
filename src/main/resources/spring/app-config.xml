<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--
         Scans within the base package of the application for @Components to
         configure as beans
     -->
    <context:component-scan base-package="your_package"/>

    <!-- Bean Validation -->
    <bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <!-- TODO: Change 'YOUR_APP_NAME' to something suitable and set the environments variables for each environment -->
                <value>classpath:environments/${YOUR_APP_NAME_ENV:dev}/application.properties</value>
            </list>
        </property>
    </bean>


</beans>
